---
import Layout from "../../layouts/Layout.astro";

const blogData = {
    title: "Discover the Top Dishes You Must Try at Vanchu Hut – Best Chinese Food in Pratap Vihar",
    metaTitle: "Discover the Best Chinese Food at Vanchu Hut – Top Dishes in Pratap Vihar",
    metaDescription: "Explore the top 5 must-try dishes at Vanchu Hut. From spicy Hakka Noodles to crispy Chicken Salt & Pepper, find the best Chinese food in Pratap Vihar, Ghaziabad.",
    image: "/blogImages/blog1.webp",
    publishDate: "2024-11-15",
    dishes: [
        {
            name: "Hakka Noodles",
            description: "Perfect for spice lovers. Our Hakka Noodles are the perfect choice for spice enthusiasts."
        },
        {
            name: "Chicken Salt & Pepper",
            description: "Crispy, tender chicken tossed in a spicy, tangy sauce."
        },
        {
            name: "Dim Sum - Kurkure Momos",
            description: "Bite-sized, flavorful dumplings perfect for sharing."
        },
        {
            name: "Honey Chilli Potato",
            description: "Crispy, golden potatoes coated in a sweet, tangy sauce."
        },
        {
            name: "Hot and Sour Soup",
            description: "Warming and delicious, the ideal way to start your meal."
        }
    ],
    faqs: [
        {
            question: "What is the best Chinese dish at Vanchu Hut?",
            answer: "Our Chili Chicken and Schezwan Noodles are customer favourites."
        },
        {
            question: "Do you offer delivery for Chinese food in Pratap Vihar?",
            answer: "Yes! We offer Chinese food delivery in Pratap Vihar for your convenience."
        },
        {
            question: "What makes Vanchu Hut different from other Chinese restaurants in Ghaziabad?",
            answer: "We offer authentic Chinese cuisine in Ghaziabad at unbeatable prices."
        }
    ]
};
---

<Layout title={blogData.metaTitle} >
    <meta name="description" content={blogData.metaDescription} />
    <section class=" font-agdasima ">
        <img src="/hero4.jpg" class="scale-100 w-screen h-[168px] transform -translate-y-[101px] md:-translate-y-[60px]  object-cover" alt="Header Image, shows picture of Various Chinese Food on a Table"/>
</section>  
    <main class="max-w-4xl mx-auto px-4 py-8">
        <!-- Hero Section -->
        <div class="relative h-[400px] mb-8 rounded-lg overflow-hidden">
            <img 
                src={blogData.image} 
                alt="Delicious Chinese dishes at Vanchu Hut"
                class="w-full h-full object-cover"
            />
        </div>

        <!-- Content -->
        <article class="prose prose-lg max-w-none">
            <h1>{blogData.title}</h1>
            
            <p class="lead">
                Looking for authentic Chinese food near me? Look no further! Vanchu Hut, located in Pratap Vihar, is your go-to spot for delicious and affordable Chinese food in Ghaziabad.
            </p>

            <h2>Top 5 Must-Try Dishes</h2>
            {blogData.dishes.map((dish, index) => (
                <div class="mb-6">
                    <h3>{index + 1}. {dish.name}</h3>
                    <p>{dish.description}</p>
                </div>
            ))}

            <h2>Why Visit Vanchu Hut?</h2>
            <p>
                At Vanchu Hut, we believe that great food doesn't have to come at a high price. From vegetarian Chinese options to affordable delivery in Pratap Vihar, we ensure that every bite is packed with flavour and value.
            </p>

            <div class="bg-primary/10 p-6 rounded-lg my-8">
                <h2 class="text-2xl font-bold mb-4">Frequently Asked Questions</h2>
                {blogData.faqs.map((faq) => (
                    <details class="mb-4">
                        <summary class="font-semibold cursor-pointer">{faq.question}</summary>
                        <p class="mt-2 pl-4">{faq.answer}</p>
                    </details>
                ))}
            </div>

            <div class="flex justify-center gap-4 my-8">
                <a href="/menu" class="bg-secondary text-white px-6 py-2 rounded-full hover:bg-secondary/90">
                    View Our Menu
                </a>
                <a href="/contact" class="bg-primary text-white px-6 py-2 rounded-full hover:bg-primary/90">
                    Contact Us
                </a>
            </div>
        </article>
    </main>
</Layout>

<style>
    .prose h1 {
        @apply text-4xl font-bold mb-8 text-primary;
    }
    .prose h2 {
        @apply text-2xl font-semibold mt-8 mb-4 text-secondary;
    }
    .prose p {
        @apply text-gray-700 leading-relaxed;
    }
</style>
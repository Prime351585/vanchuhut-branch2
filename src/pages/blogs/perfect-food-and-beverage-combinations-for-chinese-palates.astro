---

<Layout title={blogData.metaTitle} description={blogData.metaDescription}>
    {/* Optional: Keep or adjust the top hero image */}
    <section class=" font-agdasima ">
        <Image src={heroImg} class="scale-100 w-screen h-[168px] transform -translate-y-[100px] md:-translate-y-[60px]  object-cover" alt="Header Image showing Vanchu Hut ambiance or relevant theme"/>
    </section> 

    {/* Breadcrumbs Navigation */}
    <nav class="flex px-4 mb-6" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2">
            {breadcrumbs.map((item, index) => (
                <li class="flex items-center">
                    {index > 0 && (
                        <svg class="w-4 h-4 text-gray-400 mx-2" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                        </svg>
                    )}
                    {item.current ? (
                        <span class="text-gray-600" aria-current="page">{item.label}</span>
                    ) : (
                        <a href={item.href} class="text-primary hover:text-primary/80">{item.label}</a>
                    )}
                </li>
            ))}
        </ol>
    </nav>

    <main class="max-w-4xl mx-auto px-4 py-8">
        {/* Main Blog Post Image Placeholder */}
        <div class="relative h-[400px] mb-8 rounded-lg overflow-hidden shadow-lg">
            <Image
                format="webp" 
                src={blogData.image} 
                alt={blogData.title}
                class="w-full h-full object-cover"
            />
             {/* You can add an overlay or caption here if desired */}
        </div>

        <article class="prose prose-lg max-w-none mx-auto px-4 py-8 prose-headings:text-primary prose-h2:text-secondary prose-a:text-accent hover:prose-a:text-accent/80 prose-strong:font-semibold">
            {/* Blog Post Title */}
            <h1 class="text-4xl font-bold text-primary mb-4">{blogData.title}</h1>
             {/* Optional: Publish Date */}
             <p class="text-sm text-gray-500 mb-8">Published on: {new Date(blogData.publishDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</p>

            {/* Table of Contents (Manually matching blogData.sections) */}
            <div class="bg-gray-50 p-6 rounded-lg mb-12 border border-gray-200">
                <h2 class="text-xl font-semibold mb-4 text-secondary">Table of Contents</h2>
                <ol class="list-decimal pl-5 space-y-2">
                    {/* Iterate over sections that have an 'id' for the ToC */}
                    {blogData.sections.map((section) => (
                         <li>
                            <a href={`#${section.id}`} class="hover:underline">{section.title}</a>
                         </li>
                     ))}
                </ol>
            </div>

            {/* Introduction (Rendered separately or as part of the loop if desired) */}
            {/* <p class="text-gray-700 mb-8 text-lg">{blogData.introduction}</p> */} 
             {/* NOTE: Introduction content is also in sections[0], decide if you want it duplicated or rendered only once */}

            {/* Main Content Sections */}
            {blogData.sections.map((section) => (
                // Use the section 'id' for the anchor link target
                <section id={section.id} class="mb-12 scroll-mt-20"> 
                    <h2 class="text-2xl font-semibold text-secondary mb-4">
                        {section.title}
                    </h2>

                    {/* Inline Placeholder Image for relevant sections */}
                    {section.image && (
                         <div class="my-6 rounded-lg overflow-hidden shadow">
                            <Image format="webp" src={section.image} alt={section.imageAlt} class="w-full h-auto object-cover"/>
                         </div>
                    )}

                    {/* Render section content (will parse Markdown lists) */}
                     {/* Use astro set:html directive to render markdown correctly if needed, or ensure prose handles it */}
                     {/* For simplicity here, just placing the content, assuming prose handles basic markdown */}
                    <div class="text-gray-700 space-y-4" set:html={section.content
                        .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
                        // Process ordered lists (convert entire list at once)
                        .replace(/(?:^\d+\.\s+.*$(?:\r?\n|\r)?)+/gm, function(match) {
                            const items = match.split(/\r?\n|\r/).filter(Boolean);
                            const listItems = items.map(item => 
                                `<li>${item.replace(/^\d+\.\s+/, '')}</li>`
                            ).join('');
                            return `<ol>${listItems}</ol>`;
                        })
                        // Process unordered lists
                        .replace(/\*(.*?)\*/g, '<li>$1</li>')}></div>
                    {/* Subsections rendering (if needed for future content) */}
                    {'subsections' in section && section.subsections && section.subsections.length > 0 && (
                        <div class="mt-6 space-y-6 pl-4 border-l-4 border-primary/30">
                            {section.subsections.map((sub:any, subIndex:any) => (
                                <div id={`${section.id}-sub-${subIndex}`} class="scroll-mt-20"> 
                                    <h3 class="text-xl font-semibold mb-2 text-primary/90">{sub.title}</h3>
                                    <div class="text-gray-700 space-y-4" set:html={sub.content.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
                        .replace(/\*(.*?)\*/g, '<li>$1</li>')
                        .replace(/^\d+\.\s*(.*?)$/gm, '<ol><li>$1</li></ol>')
                        .replace(/<\/ol><ol>/g, '')}></div> 
                                </div>
                            ))}
                        </div>
                    )}
                </section>
            ))}

            {/* Call to Action Buttons */}
            <div class="flex flex-col sm:flex-row justify-center gap-6 mt-12 border-t pt-8">
                <a href={blogData.cta.menuLink} class="bg-secondary text-white px-8 py-3 rounded-full hover:bg-secondary/90 text-center font-semibold text-lg transition duration-300">
                    View Our Menu
                </a>
                <a href={blogData.cta.reserveLink} class="bg-primary text-white px-8 py-3 rounded-full hover:bg-primary/90 text-center font-semibold text-lg transition duration-300">
                     Reserve a Table
                </a>
            </div>
        </article>
    </main>
</Layout>


        </div>
        <div class="relative h-[400px] rounded-lg overflow-hidden shadow-xl">
          <Image 
          format="avif"
            src={logoImg} 
            alt="About Us, and our values in the resturant in Pratap Vihar Ghaziabad" 
            class="w-full h-full object-cover"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Timeline Section -->
  <section class="py-16 bg-gray-50 ">
    <div class="container mx-auto px-4 max-w-7xl">
      <h2 class="text-3xl md:text-4xl font-bold text-primary text-center mb-12">
        WHY CHOOSE US
      </h2>
      <div class="space-y-12">
        {ourStory.map((story, index) => (
          <div class={`flex flex-col md:flex-row ${index % 2 === 1 ? 'md:flex-row-reverse' : ''} gap-8 items-center`}>
            <div class="w-full md:w-1/3 text-center">
              <div class="text-4xl font-bold text-secondary mb-2">{story.year}</div>
              <h3 class="text-xl font-semibold text-primary">{story.title}</h3>
              <div class="flex items-center justify-center">
              <Image format="avif" src={story.img} alt={story.alt} class="w-20 h-20" />
              </div>
            </div>
            <div class="w-full md:w-2/3 bg-white p-6 rounded-lg shadow-md">
              <p class="text-gray-600">{story.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Values Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 max-w-7xl">
      <h2 class="text-3xl md:text-4xl font-bold text-primary text-center mb-12">
        Our Values
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {values.map((value) => (
          <div class="text-center p-6 rounded-lg bg-gray-50 hover:bg-gray-100 transition-colors duration-300">
            <div class="text-4xl mb-4">{value.icon}</div>
            <h3 class="text-xl font-semibold text-primary mb-3">{value.title}</h3>
            <p class="text-gray-600">{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-16 -mb-12 bg-primary text-white">

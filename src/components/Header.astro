      <a href="/servicearea" class="block p-4 md:p-2 rounded-md hover:bg-secondary/80 transition-all duration-300">SERVICE AREA</a>
      <a href="/reservation" class="block p-4 md:p-2 rounded-md hover:bg-secondary/80 transition-all duration-300">RESERVATIONS</a>
      <a href="/blogs" class="block p-4 md:p-2 rounded-md hover:bg-secondary/80 transition-all duration-300">OUR BLOG</a>
      <a href="/contact" class="block p-4 md:p-2 rounded-md hover:bg-secondary/80 transition-all duration-300">CONTACT US</a>
    </nav>
  </div>
</header>

<style>
@media (max-width: 768px) {
  #menu {
    transition: all 0.3s ease-out;
    opacity: 0;
    transform: translateY(-20px);
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    margin-top: 0.5rem;
    border-radius: 1rem;
    padding: 0.5rem;
  }

  #menu.active {
    opacity: 1;
    transform: translateY(0);
    max-height: calc(100vh - 80px);
    overflow-y: auto;
  }

  #menu a {
    color: white;
    padding: 0.5rem 1.5rem;
    margin: 0.25rem 0;
    border-radius: 0.5rem;
    transition: all 0.2s ease;
    display: block;
    text-align: center;
  }

  #menu a:hover {
    background: rgba(255, 255, 255, 0.1);
  }
}
</style>

<script>
const menuToggle = document.getElementById('menu-toggle');
const menu = document.getElementById('menu');

if (menuToggle && menu) {
  menuToggle.addEventListener('click', () => {
    menu.classList.toggle('hidden');
    requestAnimationFrame(() => {
      menu.classList.toggle('active');
    });
  });

  // Close menu when clicking outside
  document.addEventListener('click', (e) => {
    if (!menu.contains(e.target as Node) && !menuToggle.contains(e.target as Node) && !menu.classList.contains('hidden')) {
      menu.classList.remove('active');
      setTimeout(() => {
        menu.classList.add('hidden');
      }, 300);
    }
  });
}
</script>
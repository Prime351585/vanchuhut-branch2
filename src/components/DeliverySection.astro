---
import { Image } from "astro:assets";
import BannerImg1 from "../assets/banner/1.webp";
import BannerImg2 from "../assets/banner/2.webp";
import BannerImg3 from "../assets/banner/3.webp";
import BannerImg5 from "../assets/banner/5.webp";
import BannerImg4 from "../assets/banner/4.webp";

---

<div class="w-full py-2 bg-primary">
    <div class="container mx-auto ">

        
        <div class="cards-container relative">
            <div class="overflow-x-auto hide-scrollbar">
                <div class="flex space-x-6 " id="cardsWrapper">
                    <!-- Deals and Offers -->
                    <div class="flex-none w-72 bg-primary rounded-xl shadow-lg pl-4">
                                <Image format="avif" src={BannerImg1} alt="Momo Madness " class="w-full h-full object-cover rounded-lg"loading="lazy"/>
                    </div>
                    <!-- Deals and Offers -->
                    <div class="flex-none w-72 bg-primary rounded-xl shadow-lg">
                                <Image format="avif" src={BannerImg2} alt="A fiery Crunch, A Tasty Hunch" class="w-full h-full object-cover rounded-lg"loading="lazy"/>
                    </div>
                    <!-- Deals and Offers -->
                    <div class="flex-none w-72 bg-primary rounded-xl shadow-lg">
                                <Image format="avif" src={BannerImg3} alt="Slurp Savour Smile " class="w-full h-full object-cover rounded-lg"loading="lazy"/>
                    </div>
                    <!-- Deals and Offers -->
                    <div class="flex-none w-72 bg-primary rounded-xl shadow-lg">
                                <Image format="avif" src={BannerImg5} alt="Burger Cheesy Pleasy" class="w-full h-full object-cover rounded-lg"loading="lazy"/>
                    </div>
                    <!-- Deals and Offers -->
                    <div class="flex-none w-72 bg-primary rounded-xl shadow-lg pr-4">
                                <Image format="avif" src={BannerImg4} alt="Call Now +919971135534" class="w-full h-full object-cover rounded-lg"loading="lazy"/>
                    </div>

        </div>
    </div>
</div>

<style>
    /* Hide scrollbar for Chrome, Safari and Opera */
    .hide-scrollbar::-webkit-scrollbar {
        display: none;
    }
    
    /* Hide scrollbar for IE, Edge and Firefox */
    .hide-scrollbar {
        -ms-overflow-style: none;  /* IE and Edge */
        scrollbar-width: none;  /* Firefox */
    }
</style>

<script>
    // Initialize drag functionality
    const cardsWrapper = document.getElementById('cardsWrapper');
    if (cardsWrapper) {
        let isDragging = false;
        let startX: number;
        let scrollLeft: number;

        cardsWrapper.addEventListener('mousedown', (e) => {
        isDragging = true;
        cardsWrapper.classList.add('cursor-grabbing');
        startX = e.pageX - cardsWrapper.offsetLeft;
        scrollLeft = cardsWrapper.parentElement ? cardsWrapper.parentElement.scrollLeft : 0;
    });
        cardsWrapper.addEventListener('mouseleave', () => {
            isDragging = false;
            cardsWrapper.classList.remove('cursor-grabbing');
        });

        cardsWrapper.addEventListener('mouseup', () => {
            isDragging = false;
            cardsWrapper.classList.remove('cursor-grabbing');
        });

        cardsWrapper.addEventListener('mousemove', (e) => {
            if (!isDragging) return;
            e.preventDefault();
            const x = e.pageX - cardsWrapper.offsetLeft;
            const walk = (x - startX) * 2;
            if (cardsWrapper.parentElement) {
                cardsWrapper.parentElement.scrollLeft = scrollLeft - walk;
            }
        });
    }
    
</script>